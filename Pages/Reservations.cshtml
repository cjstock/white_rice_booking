@page 
@model ReservationsModel
@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>

<!-- Form for reserving a desired flight from a list of filtered flights information -->
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label for="depart_date">Depart Date</label>
                <input asp-for="@Model.depart_date" placeholder="YYYY-MM-DD"/>
            </div>

            <div class="form-group">
                <label for="return_date">Return Date</label>
                <input asp-for="@Model.return_date" placeholder="YYYY-MM-DD"/>
            </div>       

            <div class="form-group">
                <!--<input type="submit" value="Submit">-->
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>