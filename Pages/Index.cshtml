@model IndexModel
@{
    ViewData["Title"] = "Book Flights page";
}

<div class="text-center">
    <form method="get">
        <!-- Dropdown menu for Trip Type (Round Trip or One-way) -->
        <div class="item">
            <!-- <label for="">Choose a car:</label> -->
            <select id="trip_type" name="TripType">
                <option selected value="" disabled>Trip Type</option>
                <option value="T">Round Trip</option>
                <option value="O">One Way</option>
            </select>
        </div>

        <!-- Dropdown menu for Departing Location (Airport Name) -->
        <div class="item">
            <select id="dep_loc_airport" name="DepartAirport">
                <option selected value="" disabled>Departing Location</option>
                <option value="SFO">San Francisco International Airport</option>
                <option value="LAX">Los Angeles International Airport</option>

                <option value="SEA">Seattle Tacoma International Airport</option>
                <option value="DFW">Dallas Fort Worth International Airport</option>

                <option value="ATL">Hartsfield Jackson Atlanta International Airport</option>
                <option value="DEN">Denver International Airport</option>

                <option value="JFK">John F Kennedy International Airport</option>
                <option value="ORD">Chicago O'Hare International Airport</option>

                <option value="LAS">McCarran International Airport</option>
                <option value="MCO">Orlando International Airport</option>
            </select>
        </div>


        <!-- Dropdown menu for Arrival Location (Airport Name) -->
        <div class="item">
            <select id="arr_loc_airport" name="ArrivalAirport">
                <option selected value="" disabled>Arrival Location</option>
                <option value="SFO">San Francisco International Airport</option>
                <option value="LAX">Los Angeles International Airport</option>

                <option value="SEA">Seattle Tacoma International Airport</option>
                <option value="DFW">Dallas Fort Worth International Airport</option>

                <option value="ATL">Hartsfield Jackson Atlanta International Airport</option>
                <option value="DEN">Denver International Airport</option>

                <option value="JFK">John F Kennedy International Airport</option>
                <option value="ORD">Chicago O'Hare International Airport</option>

                <option value="LAS">McCarran International Airport</option>
                <option value="MCO">Orlando International Airport</option>
            </select>

        </div>

        <!-- Text box for inputting departure date -->
        <div class="item">
            <label for="depart_date">Depart Date<span>*</span></label>
            <input type="text" name="depart_date" placeholder="YYYY-MM-DD"/>
        </div>

        <!-- Text box for inputting return date -->
        <div class="item">
            <label for="return_date">Return Date<span>*</span></label>
            <input type="text" name="return_date" placeholder="YYYY-MM-DD"/>
        </div>

        <!-- Button for confirming all inputs to get list of available flights -->
        <input type="sumbit" value="Sumbit"/>
    </form>
</div>


<div class="text-center">
    <form method="post">
        <!-- Table to display available outgoing flights and select the flight desired -->
        <h2>Available Outgoing Flights</h2>
        <table style="width:100%">
            <tr>
                <th>Flight ID</th>
                <th>Date</th> 
                <th>Time</th>
                <th>Seats</th> 
                <th>Price</th>
            </tr>
            @foreach (var flight in @Model.availableOutgoingFlights){
            <tr>
                <td>@flight.Flight_ID</td>
                <td>@flight.Date</td>
                <td>@flight.Time</td>
                <td>@flight.Seats</td>
                <td>@flight.Price</td>
                <td><input type="submit" value="Submit" onclick="@Model.OutboundFlightID = @flight.Flight_ID"></td>
            </tr>
        }
        </table>

        <!-- Table to display available incoming flights and select the flight desired -->
        <h2>Available Inbound Flights</h2>
        <table style="width:100%">
            <tr>
                <th>Flight ID</th>
                <th>Date</th> 
                <th>Time</th>
                <th>Seats</th> 
                <th>Price</th>
            </tr>
            @foreach (var flight in @Model.availableIncomingFlights){
            <tr>
                <td>@flight.Flight_ID</td>
                <td>@flight.Date</td>
                <td>@flight.Time</td>
                <td>@flight.Seats</td>
                <td>@flight.Price</td>
                <td><input type="submit" value="Submit" onclick="@Model.InboundFlightID = @flight.Flight_ID"></td>
            </tr>
        }
        </table>
    </form>
</div>
